@model IEnumerable<ExamDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Examination System</h1>
    <p>Your gateway to seamless and efficient exam management. Explore, learn, and achieve your goals with ease!</p>
    <p>Please select the exam you would like to take</p>
    
    <br />
    <div class="row">
        <div class="col-6 mx-auto">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped table-hover mt-4">
                    <thead class="text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(E => E.Title)</th>
                            <th>Open</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(X => exam.Title)</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="TakeExam" asp-route-id="@exam.Id" class="btn btn-outline-success">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    <h3>There Is No Exams :(</h3>
                </div>
            }

        </div>
    </div>
</div>



