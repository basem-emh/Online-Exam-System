@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ForgetPassword" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input type="submit" value="Reset Password">
        </form>
        <p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
    </div>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}