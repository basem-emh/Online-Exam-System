@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "ManageUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewBag.RoleId;
}
<div class="row justify-content-center align-items-center flex-column">

    <h2 class="text-center">Manage Users Role</h2>

    <form class="col-6 mb-5 mt-3 border border-light bg-light p-5" asp-action="ManageUsers" asp-route-roleid="@RoleId">
        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model[i].IsSelected" />
                <label asp-for="@Model[i].IsSelected"><h6>@Model[i].UserName</h6></label>
            </div>

            <input type="hidden" asp-for="@Model[i].UserID" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        }

        <div class="my-3">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-controller="Role" asp-action="Edit" asp-route-roleid="@RoleId" class="btn btn-light">Cancel</a>
        </div>
    </form>

</div>
