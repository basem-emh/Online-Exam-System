@model RoleViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-items-center flex-column">

    <h1 class="text-center">Add New Role</h1>

    <form asp-action="Create" class="col-6 mb-5 mt-3 border border-light bg-light p-5" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3">
            <label class="col-form-label" asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="mt-4">
                <input type="submit" value="Add Role" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Back To List</a>
            </div>
        </div>

    </form>

</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}